<sly data-sly-use.model="com.aem.play.core.models.SideMenuModel" />

<sly data-sly-test="${model.root}">
    <nav class="side-menu">
        <ul class="side-menu__list">

            <!-- Root item -->
            <li class="side-menu__item side-menu__item--root ${model.root.current ? 'is-active' : ''}">
                <a href="${model.root.Link.url}">${model.root.title}</a>
            </li>

            <!-- Child items -->
            <sly data-sly-list.child="${model.root.children}">
                <li class="side-menu__item ${child.current ? 'is-active' : ''}">
                    <a href="${child.Link.url}">${child.title}</a>

                    <!-- Optional: render grandchildren if they exist -->
                    <sly data-sly-list.grandchild="${child.children}">
                        <ul class="side-menu__sublist">
                            <li class="side-menu__subitem ${grandchild.current ? 'is-active' : ''}">
                                <a href="${grandchild.Link.url}">${grandchild.title}</a>
                            </li>
                        </ul>
                    </sly>
                </li>
            </sly>

        </ul>
    </nav>
</sly>

